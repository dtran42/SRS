@model ApplicationUser
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Roles = ViewData["Roles"] as SelectList;
}

<section class="content">
    <div class="row">
        <div class="col-sm-6">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Account</h3>
            </div>
            <div class="box-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select asp-for=" SelectedRoleId" class="form-control" asp-items="Roles"></select>
                        <span asp-validation-for="SelectedRoleId"></span>
                    </div>
                </form>
            </div>
            <div class="box-footer clearfix">
                <input type="submit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
            </div>
        </div>
    </div>
</section>

