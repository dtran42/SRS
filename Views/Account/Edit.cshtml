@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Roles = ViewData["Roles"] as SelectList;
}

<section class="content">
    <div class="row">
        <div class="col-sm-6">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Account</h3>
            </div>
            <div class="box-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(model => model.Email)
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for=" Email" class="form-control" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select asp-for=" SelectedRoleId" class="form-control" asp-items="Roles"></select>
                        <span asp-validation-for="SelectedRoleId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for=" FullName" class="form-control" />
                        <span asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for=" Phone" class="form-control" />
                        <span asp-validation-for="Phone"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Location" class="control-label"></label>
                        <input asp-for=" Location" class="form-control" />
                        <span asp-validation-for="Location"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BusinessArea" class="control-label"></label>
                        <input asp-for=" BusinessArea" class="form-control" />
                        <span asp-validation-for="BusinessArea"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TestFiled" class="control-label"></label>
                        <input asp-for=" TestFiled" class="form-control" />
                        <span asp-validation-for="TestFiled"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

